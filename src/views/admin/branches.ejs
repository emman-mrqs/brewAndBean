<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Branch Management - Bean & Brew Admin</title>
    <!-- Bootstrap CSS for Toasts and Modals -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/branches.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>

    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Sidebar -->
    <%- include('../partials/adminSidebar', { page: 'admin-branches' }) %>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <%- include('../partials/adminHeader') %>

        <!-- Page Content -->
        <div class="page-content">
            <div class="page-header">
                <div>
                    <h1><i class="fas fa-store"></i> Branch Management</h1>
                    <p>Manage all Bean & Brew store locations</p>
                </div>
                <button class="btn-primary" id="addBranchBtn">
                    <i class="fas fa-plus"></i> Add New Branch
                </button>
            </div>

            <!-- Stats Cards -->
            <div class="branch-stats">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-store"></i>
                    </div>
                    <div class="stat-info">
                        <h3 id="totalBranches">0</h3>
                        <p>Total Branches</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon active">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-info">
                        <h3 id="activeBranches">0</h3>
                        <p>Active Branches</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="stat-info">
                        <h3 id="totalCities">0</h3>
                        <p>Cities Covered</p>
                    </div>
                </div>
            </div>

            <!-- Branches Table -->
            <div class="table-container">
                <div class="table-header">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" id="searchInput" placeholder="Search branches...">
                    </div>
                    <div class="filter-controls">
                        <select id="cityFilter" class="filter-select">
                            <option value="">All Cities</option>
                        </select>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="data-table" id="branchesTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Branch Name</th>
                                <th>Address</th>
                                <th>City</th>
                                <th>Zipcode</th>
                                <th>Created</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="branchesTableBody">
                            <!-- Data will be loaded here -->
                            <tr>
                                <td colspan="7" class="text-center loading-state">
                                    <i class="fas fa-spinner fa-spin"></i> Loading branches...
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="table-footer">
                    <div class="showing-entries">
                        Showing <span id="showingStart">0</span> to <span id="showingEnd">0</span> of <span id="totalEntries">0</span> entries
                    </div>
                    <div class="pagination" id="pagination">
                        <!-- Pagination buttons will be generated here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add/Edit Branch Modal -->
    <div class="modal fade" id="branchModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">
                        <i class="fas fa-store"></i> <span id="modalTitleText">Add New Branch</span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="branchForm">
                        <input type="hidden" id="branchId" name="id">
                        
                        <div class="form-group">
                            <label for="branchName">
                                <i class="fas fa-tag"></i> Branch Name *
                            </label>
                            <input type="text" id="branchName" name="name" class="form-control" 
                                   placeholder="e.g., Makati Central Branch" required>
                        </div>

                        <div class="form-group">
                            <label for="branchStreet">
                                <i class="fas fa-road"></i> Street Address *
                            </label>
                            <input type="text" id="branchStreet" name="street" class="form-control" 
                                   placeholder="e.g., 123 Main Street, Building A" required>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="branchCity">
                                    <i class="fas fa-city"></i> City *
                                </label>
                                <input type="text" id="branchCity" name="city" class="form-control" 
                                       placeholder="e.g., Makati" required>
                            </div>

                            <div class="form-group">
                                <label for="branchZipcode">
                                    <i class="fas fa-map-pin"></i> Zipcode
                                </label>
                                <input type="text" id="branchZipcode" name="zipcode" class="form-control" 
                                       placeholder="e.g., 1200" maxlength="10">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                    <button type="button" class="btn-primary" id="saveBranchBtn">
                        <i class="fas fa-save"></i> <span id="saveButtonText">Save Branch</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteBranchModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-danger text-white border-0 py-4">
                    <div class="d-flex align-items-center">
                        <div class="modal-icon me-3">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="modal-title mb-0 fw-bold" id="deleteModalLabel">Confirm Delete</h4>
                            <p class="mb-0 small opacity-90">This action requires your confirmation</p>
                        </div>
                    </div>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="alert alert-warning bg-warning bg-opacity-10 border border-warning border-2 rounded-3 mb-4">
                        <div class="d-flex align-items-start">
                            <i class="fas fa-info-circle text-warning me-3 mt-1 fs-5"></i>
                            <div>
                                <h6 class="fw-bold text-dark mb-1">Important Notice</h6>
                                <p class="mb-0 small text-muted">You are about to permanently delete this branch. This action cannot be undone and will remove all associated data.</p>
                            </div>
                        </div>
                    </div>
                    
                    <h6 class="fw-bold text-dark mb-3">Branch Details:</h6>
                    <div class="branch-delete-info bg-light rounded-3 p-4 border border-danger border-start border-4">
                        <div class="row g-3">
                            <div class="col-md-12">
                                <label class="small text-muted mb-1">Branch Name</label>
                                <div class="fw-bold text-dark fs-5" id="deleteBranchName"></div>
                            </div>
                            <div class="col-md-12">
                                <label class="small text-muted mb-1">Full Address</label>
                                <div class="text-dark" id="deleteBranchAddress"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-light border-0 p-4 d-flex justify-content-between">
                    <button type="button" class="btn btn-light btn-lg px-4 shadow-sm" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i> Cancel
                    </button>
                    <button type="button" class="btn btn-danger btn-lg px-4 shadow" id="confirmDeleteBtn">
                        <i class="fas fa-trash-alt me-2"></i> Delete Branch
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Toast Styles -->
    <style>
        /* Bootstrap Toast Positioning - Bottom Right */
        .toast-container {
            z-index: 10001 !important;
        }

        /* Toast Styling */
        .toast {
            min-width: 300px;
            max-width: 400px;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
            border: none;
            overflow: hidden;
        }

        .toast-header {
            padding: 12px 16px;
            border-bottom: none;
            font-weight: 600;
            border-radius: 12px 12px 0 0;
        }

        .toast-header i {
            font-size: 1.1rem;
        }

        .toast-body {
            padding: 14px 16px;
            background-color: #ffffff;
            color: #333;
            font-size: 0.9rem;
            border-radius: 0 0 12px 12px;
        }

        /* Toast Header Colors */
        .toast-header.bg-success {
            background-color: #28a745 !important;
        }

        .toast-header.bg-danger {
            background-color: #dc3545 !important;
        }

        .toast-header.bg-warning {
            background-color: #ffc107 !important;
            color: #333 !important;
        }

        .toast-header.bg-warning .btn-close {
            filter: invert(1);
        }

        .toast-header.bg-info {
            background-color: #17a2b8 !important;
        }

        /* Bootstrap Close Button */
        .toast .btn-close {
            opacity: 0.8;
        }

        .toast .btn-close:hover {
            opacity: 1;
        }

        /* Animation */
        .toast.showing {
            opacity: 0;
        }

        .toast.show {
            opacity: 1;
        }

        .toast.hide {
            opacity: 0;
        }

        /* Enhanced Delete Modal Styles */
        #deleteBranchModal .modal-content {
            border-radius: 16px;
            overflow: hidden;
        }

        #deleteBranchModal .modal-header {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            padding: 1.5rem 2rem;
        }

        #deleteBranchModal .modal-icon {
            width: 60px;
            height: 60px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(10px);
        }

        #deleteBranchModal .modal-body {
            background: #ffffff;
        }

        #deleteBranchModal .branch-delete-info {
            background: #f8f9fa !important;
            border-left: 4px solid #dc3545 !important;
            transition: all 0.3s ease;
        }

        #deleteBranchModal .branch-delete-info:hover {
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.15);
        }

        #deleteBranchModal .btn {
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
            min-width: 140px;
        }

        #deleteBranchModal .btn-light {
            background: #ffffff;
            border: 2px solid #dee2e6;
            color: #6c757d;
        }

        #deleteBranchModal .btn-light:hover {
            background: #f8f9fa;
            border-color: #adb5bd;
            transform: translateY(-2px);
        }

        #deleteBranchModal .btn-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            border: none;
        }

        #deleteBranchModal .btn-danger:hover {
            background: linear-gradient(135deg, #c82333 0%, #bd2130 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(220, 53, 69, 0.4);
        }

        #deleteBranchModal .alert-warning {
            border-radius: 12px;
        }

        /* Responsive Design for Delete Modal */
        @media (max-width: 768px) {
            #deleteBranchModal .modal-dialog {
                margin: 1rem;
            }

            #deleteBranchModal .modal-header {
                padding: 1.25rem 1.5rem;
            }

            #deleteBranchModal .modal-icon {
                width: 50px;
                height: 50px;
            }

            #deleteBranchModal .modal-icon i {
                font-size: 1.5rem !important;
            }

            #deleteBranchModal .modal-body {
                padding: 1.5rem !important;
            }

            #deleteBranchModal .modal-footer {
                flex-direction: column-reverse;
                gap: 0.75rem;
            }

            #deleteBranchModal .btn {
                width: 100%;
                min-width: unset;
            }

            #deleteBranchModal .modal-title {
                font-size: 1.25rem !important;
            }
        }

        @media (max-width: 576px) {
            #deleteBranchModal .modal-lg {
                max-width: 95%;
            }
        }
    </style>

    <!-- Bootstrap JS for Modals -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Branches Management Script -->
    <script src="/js/admin/branches.js"></script>
</body>
</html>
