<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/reports.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
</head>
<body>
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <%- include('../partials/adminSidebar', { page: 'admin-reports' }) %>

    <div class="main-content">
        <%- include('../partials/adminHeader') %>

        <div class="page-content">
            <div class="page-header">
                <h1>Reports & Analytics</h1>
                <p>Comprehensive business insights and performance metrics</p>
            </div>

            <!-- Overview Stats -->
            <div class="reports-grid" id="overviewStats">
                <div class="stat-card">
                    <div class="stat-card-header">
                        <div class="stat-content">
                            <div class="stat-value" id="totalRevenue">â‚±0</div>
                            <div class="stat-label">Total Revenue</div>
                        </div>
                        <div class="stat-icon revenue">
                            <i class="fas fa-peso-sign"></i>
                        </div>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-card-header">
                        <div class="stat-content">
                            <div class="stat-value" id="totalOrders">0</div>
                            <div class="stat-label">Total Orders</div>
                        </div>
                        <div class="stat-icon orders">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-card-header">
                        <div class="stat-content">
                            <div class="stat-value" id="totalCustomers">0</div>
                            <div class="stat-label">Total Customers</div>
                        </div>
                        <div class="stat-icon customers">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-card-header">
                        <div class="stat-content">
                            <div class="stat-value" id="totalProducts">0</div>
                            <div class="stat-label">Total Products</div>
                        </div>
                        <div class="stat-icon products">
                            <i class="fas fa-box"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sales Chart -->
            <div class="chart-container">
                <div class="chart-header">
                    <h3 class="chart-title">Sales Performance</h3>
                    <div class="chart-filters">
                        <button class="filter-btn" data-period="7days">7 Days</button>
                        <button class="filter-btn active" data-period="30days">30 Days</button>
                        <button class="filter-btn" data-period="90days">90 Days</button>
                        <button class="filter-btn" data-period="year">1 Year</button>
                    </div>
                </div>
                <div class="canvas-wrapper">
                    <canvas id="salesChart"></canvas>
                </div>
            </div>

            <!-- Two Column Charts -->
            <div class="two-column-grid">
                <!-- Auth Providers Chart -->
                <div class="chart-container">
                    <div class="chart-header">
                        <h3 class="chart-title">User Registration Methods</h3>
                    </div>
                    <div class="canvas-wrapper small">
                        <canvas id="authProvidersChart"></canvas>
                    </div>
                </div>

                <!-- Payment Methods Chart -->
                <div class="chart-container">
                    <div class="chart-header">
                        <h3 class="chart-title">Payment Methods Distribution</h3>
                    </div>
                    <div class="canvas-wrapper small">
                        <canvas id="paymentMethodsChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Customer Analytics -->
            <div class="chart-container">
                <div class="chart-header">
                    <h3 class="chart-title">Customer Growth Trend (Last 12 Months)</h3>
                </div>
                <div class="canvas-wrapper">
                    <canvas id="customerTrendChart"></canvas>
                </div>
            </div>

            <!-- Tables Row -->
            <div class="two-column-grid">
                <!-- Top Products Table -->
                <div class="table-container">
                    <h3 class="chart-title mb-3">Top Selling Products</h3>
                    <div class="table-responsive">
                        <table class="report-table" id="topProductsTable">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Sold</th>
                                    <th>Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="3" class="text-center">
                                        <div class="loading-spinner">
                                            <i class="fas fa-spinner fa-spin fa-2x"></i>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Low Stock Table -->
                <div class="table-container">
                    <h3 class="chart-title mb-3">Low Stock Alert</h3>
                    <div class="table-responsive">
                        <table class="report-table" id="lowStockTable">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Variant</th>
                                    <th>Stock</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="3" class="text-center">
                                        <div class="loading-spinner">
                                            <i class="fas fa-spinner fa-spin fa-2x"></i>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Branch Performance -->
            <div class="chart-container">
                <div class="chart-header">
                    <h3 class="chart-title">Branch Performance</h3>
                </div>
                <div class="canvas-wrapper">
                    <canvas id="branchPerformanceChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin/reports.js"></script>
</body>
</html>
