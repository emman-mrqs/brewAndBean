<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reports & Analytics - Bean & Brew Admin</title>
    <link rel="stylesheet" href="css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        .period-tabs {
            display: flex;
            gap: 12px;
            margin-bottom: 32px;
        }
        .period-tab {
            padding: 10px 20px;
            border: 1px solid var(--brew-line);
            background: white;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 500;
        }
        .period-tab.active {
            background: var(--brew-primary);
            color: white;
            border-color: var(--brew-primary);
        }
        .insights-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            margin-top: 32px;
        }
        .insight-card {
            background: white;
            padding: 20px;
            border-radius: 16px;
            border: 1px solid var(--brew-line);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .insight-info h4 {
            font-size: 0.85rem;
            color: var(--brew-text-light);
            margin-bottom: 4px;
        }
        .insight-info p {
            font-size: 0.9rem;
            color: var(--brew-text);
        }
        .insight-value {
            font-size: 1.3rem;
            font-weight: 700;
        }
        .insight-value.positive {
            color: #10B981;
        }
        .insight-value.neutral {
            color: var(--brew-primary);
        }
    </style>
</head>
<body>
    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Sidebar -->
    <%- include('../partials/adminSidebar', { page: 'admin-reports' }) %>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <header class="header">
            <div class="search-bar">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Search...">
            </div>
            <div class="header-actions">
                <button class="notification-btn">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </button>
                <div class="user-profile">
                    <div class="user-avatar">A</div>
                    <div class="user-info">
                        <span class="user-name">Admin</span>
                    </div>
                    <i class="fas fa-chevron-down user-dropdown-icon"></i>
                </div>
                <button class="logout-btn" onclick="logout()">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </button>
            </div>
        </header>

        <!-- Page Content -->
        <div class="page-content">
            <div class="page-header">
                <h1>Reports & Analytics</h1>
                <p>Track your coffee shop's performance and insights</p>
            </div>

            <!-- Period Tabs -->
            <div class="period-tabs">
                <button class="period-tab active">Last 7 Days</button>
                <button class="period-tab">Last 30 Days</button>
                <button class="period-tab">Last 6 Months</button>
            </div>

            <!-- Stats Grid -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-card-header">
                        <span class="stat-card-title">Total Revenue</span>
                        <div class="stat-card-icon revenue">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                    </div>
                    <div class="stat-card-value">$12,000</div>
                    <div class="stat-card-change positive">
                        <i class="fas fa-arrow-up"></i> +2.5% from last period
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-card-header">
                        <span class="stat-card-title">Total Orders</span>
                        <div class="stat-card-icon orders">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                    </div>
                    <div class="stat-card-value">485</div>
                    <div class="stat-card-change positive">
                        <i class="fas fa-arrow-up"></i> +8.2% from last period
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-card-header">
                        <span class="stat-card-title">Average Spend</span>
                        <div class="stat-card-icon spend">
                            <i class="fas fa-chart-line"></i>
                        </div>
                    </div>
                    <div class="stat-card-value">$24.74</div>
                    <div class="stat-card-change positive">
                        <i class="fas fa-arrow-up"></i> +3.1% from last period
                    </div>
                </div>
            </div>

            <!-- Revenue Trend & Payment Methods -->
            <div style="display: grid; grid-template-columns: 1.5fr 1fr; gap: 24px; margin: 32px 0;">
                <div class="data-table-container">
                    <div class="table-header">
                        <h2 class="table-title">Revenue Trend</h2>
                        <span style="color: var(--brew-text-light); font-size: 0.9rem;">Daily Revenue</span>
                    </div>
                    <div style="padding: 40px; text-align: center; color: var(--brew-text-light);">
                        <i class="fas fa-chart-area" style="font-size: 4rem; opacity: 0.2;"></i>
                        <p style="margin-top: 16px;">Revenue chart visualization</p>
                    </div>
                </div>

                <div class="data-table-container">
                    <div class="table-header">
                        <h2 class="table-title">Payment Methods</h2>
                        <span style="color: var(--brew-text-light); font-size: 0.9rem;">Sales Distribution</span>
                    </div>
                    <div style="padding: 40px;">
                        <div style="width: 150px; height: 150px; margin: 0 auto 24px; border-radius: 50%; background: conic-gradient(#C67C4E 0% 65%, #F5E6D3 65% 100%); position: relative;">
                            <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center;">
                                <div style="font-size: 1.5rem; font-weight: 700; color: var(--brew-text);">Total</div>
                                <div style="font-size: 0.9rem; color: var(--brew-text-light);">$485</div>
                            </div>
                        </div>
                        <div style="display: flex; flex-direction: column; gap: 12px;">
                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <div style="width: 12px; height: 12px; background: #C67C4E; border-radius: 50%;"></div>
                                    <div>
                                        <div style="font-weight: 600; color: var(--brew-text);">PayPal</div>
                                        <div style="font-size: 0.8rem; color: var(--brew-text-light);">Digital payments</div>
                                    </div>
                                </div>
                                <div style="text-align: right;">
                                    <div style="font-weight: 600;">65%</div>
                                    <div style="font-size: 0.8rem; color: var(--brew-text-light);">$7,800</div>
                                </div>
                            </div>
                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <div style="width: 12px; height: 12px; background: #F5E6D3; border-radius: 50%;"></div>
                                    <div>
                                        <div style="font-weight: 600; color: var(--brew-text);">Cash</div>
                                        <div style="font-size: 0.8rem; color: var(--brew-text-light);">Physical payments</div>
                                    </div>
                                </div>
                                <div style="text-align: right;">
                                    <div style="font-weight: 600;">35%</div>
                                    <div style="font-size: 0.8rem; color: var(--brew-text-light);">$4,200</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Insights -->
            <div class="data-table-container">
                <div class="table-header">
                    <h2 class="table-title">Quick Insights</h2>
                </div>
                <div style="padding: 24px;">
                    <div class="insights-grid">
                        <div class="insight-card">
                            <div class="insight-info">
                                <h4>Peak Sales Day</h4>
                                <p>Highest revenue day</p>
                            </div>
                            <div class="insight-value neutral">Saturday</div>
                        </div>
                        <div class="insight-card">
                            <div class="insight-info">
                                <h4>Customer Growth</h4>
                                <p>New customers this week</p>
                            </div>
                            <div class="insight-value positive">+15.3%</div>
                        </div>
                        <div class="insight-card">
                            <div class="insight-info">
                                <h4>Best Selling Item</h4>
                                <p>Most popular product</p>
                            </div>
                            <div class="insight-value neutral">House Blend</div>
                        </div>
                        <div class="insight-card">
                            <div class="insight-info">
                                <h4>Return Rate</h4>
                                <p>Repeat customers</p>
                            </div>
                            <div class="insight-value positive">68.5%</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Logout function
        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                window.location.href = '../LogIn/LogIn.html';
            }
        }

        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');
        const userAvatar = document.querySelector('.user-avatar');
        
        userAvatar.addEventListener('click', () => {
            sidebar.classList.toggle('active');
            sidebarOverlay.classList.toggle('active');
        });
        
        sidebarOverlay.addEventListener('click', () => {
            sidebar.classList.remove('active');
            sidebarOverlay.classList.remove('active');
        });

        const sidebarLinks = document.querySelectorAll('.sidebar-menu a');
        sidebarLinks.forEach(link => {
            link.addEventListener('click', () => {
                if (window.innerWidth <= 1024) {
                    sidebar.classList.remove('active');
                    sidebarOverlay.classList.remove('active');
                }
            });
        });
    </script>
</body>
</html>
