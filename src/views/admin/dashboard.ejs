<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/admin.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="sidebar-overlay" id="sidebarOverlay"></div>
  <%- include('../partials/adminSidebar', { page: page }) %>
  <div class="main-content">
    <%- include('../partials/adminHeader') %>

    <div class="page-content">
      <div class="page-header">
        <h1>Dashboard</h1>
        <p>Overview of store performance & inventory</p>
      </div>

      <div class="stats-grid">
        <div class="stat-card" data-stat="total-orders">
          <div class="stat-card-header">
            <span class="stat-card-title">Total Orders</span>
            <div class="stat-card-icon orders"><i class="fas fa-shopping-cart"></i></div>
          </div>
          <div class="stat-card-value" id="stat-total-orders"><%= stats?.totalOrders ?? 0 %></div>
          <div class="stat-card-change positive">
            <i class="fas fa-arrow-up"></i> <span id="stat-orders-change">+% from last month</span>
          </div>
        </div>

        <div class="stat-card" data-stat="total-payments">
          <div class="stat-card-header">
            <span class="stat-card-title">Total Payments</span>
            <div class="stat-card-icon revenue"><i class="fas fa-peso-sign"></i></div>
          </div>
          <div class="stat-card-value" id="stat-total-payments">&#8369;<%= (stats?.totalRevenue || 0).toLocaleString(undefined, {minimumFractionDigits:2, maximumFractionDigits:2}) %></div>
          <div class="stat-card-change positive"><i class="fas fa-arrow-up"></i> <span id="stat-revenue-change">+% from last month</span></div>
        </div>

        <div class="stat-card" data-stat="total-products">
          <div class="stat-card-header">
            <span class="stat-card-title">Products</span>
            <div class="stat-card-icon alert"><i class="fas fa-box-open"></i></div>
          </div>
          <div class="stat-card-value" id="stat-products"><%= stats?.totalProducts ?? 0 %></div>
          <div class="stat-card-change"><span id="stat-variants"><%= stats?.totalVariants ?? 0 %> variants</span></div>
        </div>

        <div class="stat-card" data-stat="users">
          <div class="stat-card-header">
            <span class="stat-card-title">Customers</span>
            <div class="stat-card-icon paypal"><i class="fas fa-users"></i></div>
          </div>
          <div class="stat-card-value" id="stat-users"><%= stats?.totalUsers ?? 0 %></div>
          <div class="stat-card-change"><span>Active customers</span></div>
        </div>

        <div class="stat-card" data-stat="low-stock-alerts">
          <div class="stat-card-header">
            <span class="stat-card-title">Low Stock Alerts</span>
            <div class="stat-card-icon alert"><i class="fas fa-exclamation-triangle"></i></div>
          </div>
          <div class="stat-card-value" id="stat-low-stock"><%= stats?.lowStockCount ?? 0 %></div>
          <div class="stat-card-change">Items below 5 units</div>
        </div>
      </div>

      <!-- Low Stock Products -->
      <div class="data-table-container">
        <div class="table-header">
          <h2 class="table-title">Low Stock Products</h2>
          <div class="table-actions">
            <button class="btn-secondary" id="refreshLowStock">Refresh</button>
            <a href="/admin/products" class="btn-primary"><i class="fas fa-boxes"></i> Manage Products</a>
          </div>
        </div>

        <table class="data-table" id="lowStockTable">
          <thead>
            <tr>
              <th>Product</th>
              <th>Variant</th>
              <th>Stock Level</th>
              <th>Price</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% if (lowStockProducts && lowStockProducts.length) { %>
              <% lowStockProducts.forEach(item => { %>
                <tr>
                  <td>
                    <div class="product-cell">
                      <div class="product-image">â˜•</div>
                      <span><%= item.product_name %></span>
                    </div>
                  </td>
                  <td><%= item.variant_name %></td>
                  <td><%= item.stock %> units</td>
                  <td>&#8369;<%= Number(item.price).toFixed(2) %></td>
                  <td><span class="status-badge warning">Low Stock</span></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5" style="text-align:center; padding:20px;">No low-stock items</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="/js/admin/dashboard.js"></script>
</body>
</html>
