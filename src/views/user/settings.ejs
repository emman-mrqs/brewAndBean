<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <meta name="description" content="Bean & Brew Account Settings - Manage your account preferences"/>
  <meta name="author" content="Bean & Brew"/>
  <meta name="theme-color" content="#C67C4E"/>
  <title>Settings - Bean & Brew</title>

  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/dashboard-new.css">
  <link rel="stylesheet" href="/css/settings.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-..." crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>


  <%- include('../partials/navbar', { page: 'settings', isAuthenticated: typeof isAuthenticated !== 'undefined' ? isAuthenticated : false, user: typeof user !== 'undefined' ? user : null }) %>

    <!-- Bootstrap toast container (bottom-right) -->
  <div id="toastContainer" aria-live="polite" aria-atomic="true">
    <div id="appToast" class="toast" role="status" aria-live="polite" aria-atomic="true" data-bs-autohide="true" data-bs-delay="4000" style="min-width: 260px;">
      <div class="toast-header">
        <strong class="me-auto" id="appToastTitle">Notification</strong>
        <small id="appToastTime" class="text-muted"></small>
        <button type="button" class="btn-close ms-2 mb-1" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <div class="toast-body" id="appToastBody">
        <!-- message content set by JS -->
      </div>
    </div>
  </div>

  <main class="dashboard-main">
    <div class="dashboard-wrapper">
      <section class="nav-section">
        <div class="nav-cards">
          <a href="/dashboard" class="nav-card">
            <div class="nav-card-icon"><i class="fas fa-home"></i></div>
            <h3 class="nav-card-title">Dashboard</h3>
            <p class="nav-card-desc">Overview & Stats</p>
          </a>
          <a href="/order-history" class="nav-card">
            <div class="nav-card-icon"><i class="fas fa-history"></i></div>
            <h3 class="nav-card-title">Order History</h3>
            <p class="nav-card-desc">Past Orders</p>
          </a>
          <a href="/order-preview" class="nav-card">
            <div class="nav-card-icon"><i class="fas fa-shopping-cart"></i></div>
            <h3 class="nav-card-title">Current Order</h3>
            <p class="nav-card-desc">Active Order</p>
          </a>
          <a href="/settings" class="nav-card active">
            <div class="nav-card-icon"><i class="fas fa-cog"></i></div>
            <h3 class="nav-card-title">Settings</h3>
            <p class="nav-card-desc">Account</p>
          </a>
        </div>
      </section>

      <header class="page-header">
        <div class="header-left">
          <h1 class="page-title">Account Settings</h1>
          <p class="page-subtitle">Update your profile and password</p>
        </div>
      </header>

      <section class="content-grid">
        <div class="content-card" style="grid-column: 1 / -1;">
          <div class="card-header">
            <h2 class="card-title"><i class="fas fa-user-circle"></i> Profile</h2>
          </div>

          <div class="card-body">
            <!-- Flash/message holder (server fills 'message' and 'error') -->
            <div id="pageMessage"
                 data-message="<%= typeof message !== 'undefined' && message ? message : '' %>"
                 data-error="<%= typeof error !== 'undefined' && error ? error : '' %>"
                 style="display:none;"></div>

            <!-- Profile summary -->
            <div class="profile-card">
              <div class="profile-left">
                <div class="profile-avatar">
                  <% if (user && user.avatar_url) { %>
                    <img src="<%= user.avatar_url %>" alt="avatar">
                  <% } else { %>
                    <div class="avatar-placeholder"><i class="fas fa-user"></i></div>
                  <% } %>
                </div>

                <div class="profile-meta">
                  <!-- show full name if available; otherwise show a friendly fallback (email local-part or 'User') -->
<div class="profile-name">
  <% if (user) { %>
    <%= [user.first_name, user.last_name].filter(Boolean).join(' ') %>
  <% } else { %>
    User
  <% } %>
</div>


                  <!-- email (always shown once) -->
                  <div class="profile-email">
                    <i class="fas fa-envelope"></i>
                    <%= user && user.email ? user.email : '—' %>
                  </div>

                  <div class="profile-phone">
                    <i class="fas fa-phone"></i>
                    <%= user && user.phone ? user.phone : '—' %>
                  </div>
                </div>
              </div>

              <div class="profile-actions">
                <button id="editProfileBtn" class="btn-primary-small"><i class="fas fa-edit"></i> Edit Profile</button>

                <% /* Only show Change Password for local-auth users (or when auth_provider is not set) */ %>
                <% if (!user || !user.auth_provider || user.auth_provider === 'local') { %>
                  <button id="changePasswordBtn" class="btn-link" style="margin-top: 8px;"><i class="fas fa-key"></i> Change Password</button>
                <% } else { %>
                  <div class="auth-provider-note" style="margin-top:8px; color:#555; font-size:0.95rem;">
                    Signed in with <strong><%= user.auth_provider %></strong>. Password is managed by external provider.
                  </div>
                <% } %>
              </div>
            </div>

            <!-- Edit profile form (hidden by default) -->
            <form id="editProfileForm" class="settings-form" action="/settings/profile" method="POST" style="display:none;">
              <input type="hidden" name="user_id" value="<%= user ? user.id : '' %>">
              <div class="form-row">
                <label for="first_name">First name</label>
                <input id="first_name" name="first_name" type="text" value="<%= user && user.first_name ? user.first_name : '' %>" placeholder="First name" required>
              </div>
              <div class="form-row">
                <label for="last_name">Last name</label>
                <input id="last_name" name="last_name" type="text" value="<%= user && user.last_name ? user.last_name : '' %>" placeholder="Last name" required>
              </div>
              <div class="form-row">
                <label for="phone">Phone</label>
                <input
                id="phone"
                name="phone"
                type="tel"
                inputmode="numeric"
                pattern="[0-9]{11}"
                maxlength="11"
                placeholder="e.g. 09171234567"
                value="<%= user && user.phone ? user.phone : '' %>"
                oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                required
                >
              </div>

              <!-- Email field added so user can update contact/email -->
            <div class="form-row">
            <label for="email">Email</label>
            <input id="email" name="email" type="email" value="<%= user && user.email ? user.email : '' %>" readonly>
            <small class="muted">Email cannot be changed here. Contact support to change your email.</small>
            </div>

              <div class="form-actions">
                <button type="submit" class="btn-primary-action">Save changes</button>
                <button type="button" id="cancelEditProfile" class="btn-link">Cancel</button>
              </div>
            </form>

            <!-- Change password form (only rendered for local users) -->
            <% if (!user || !user.auth_provider || user.auth_provider === 'local') { %>
              <form id="changePasswordForm" class="settings-form" action="/settings/password" method="POST" style="display:none;">
                <input type="hidden" name="user_id" value="<%= user ? user.id : '' %>">
                <div class="form-row">
                  <label for="current_password">Current password</label>
                  <input id="current_password" name="current_password" type="password" placeholder="Current password" required>
                </div>
                <div class="form-row">
                  <label for="new_password">New password</label>
                  <input id="new_password" name="new_password" type="password" placeholder="New password" required minlength="8">
                </div>
                <div class="form-row">
                  <label for="confirm_password">Confirm new password</label>
                  <input id="confirm_password" name="confirm_password" type="password" placeholder="Confirm password" required minlength="8">
                </div>
                <div class="form-actions">
                  <button type="submit" class="btn-primary-action">Change password</button>
                  <button type="button" id="cancelChangePassword" class="btn-link">Cancel</button>
                </div>
              </form>
            <% } %>

          </div>
        </div>
      </section>
    </div>
  </main>

  <%- include('../partials/generalBottomNav', { page: 'home' }) %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>
  <script src="/js/user/settings.js"></script>
</body>
</html>
