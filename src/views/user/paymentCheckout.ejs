<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#C67C4E">
    <title>Payment - Brew & Bean</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/checkout.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <meta name="description" content="Complete your payment securely with Brew & Bean.">
    
    <style>
        .payment-icon-wrapper {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            background: linear-gradient(135deg, #FFF8F3 0%, #FFF5EE 100%);
            transition: all 0.3s ease;
        }

        .payment-icon {
            font-size: 2rem;
            color: var(--checkout-accent);
            transition: all 0.3s ease;
        }

        .payment-option input[type="radio"]:checked + .payment-label .payment-icon-wrapper {
            background: linear-gradient(135deg, var(--checkout-accent) 0%, var(--checkout-accent-dark) 100%);
            box-shadow: 0 4px 12px rgba(198, 124, 78, 0.3);
        }

        .payment-option input[type="radio"]:checked + .payment-label .payment-icon {
            color: white;
            transform: scale(1.1);
        }

        .paypal-icon {
            color: #0070BA;
        }

        .payment-option input[type="radio"]:checked + .payment-label .paypal-icon {
            color: white;
        }

        .checkout-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        @media (max-width: 768px) {
            .checkout-actions {
                flex-direction: column;
            }

            .checkout-actions .btn {
                width: 100%;
            }
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--checkout-accent) 0%, var(--checkout-accent-dark) 100%);
            border: none;
            font-weight: 600;
            padding: 0.875rem 2rem;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(198, 124, 78, 0.3);
        }

        .btn-outline-secondary {
            border-width: 2px;
            font-weight: 600;
            padding: 0.875rem 2rem;
        }

        .form-control:focus {
            border-color: var(--checkout-accent);
            box-shadow: 0 0 0 0.25rem rgba(198, 124, 78, 0.15);
        }

        .form-label {
            font-weight: 500;
            color: var(--checkout-text);
            margin-bottom: 0.5rem;
        }

        .form-label i {
            margin-right: 0.25rem;
            color: var(--checkout-accent);
        }
    </style>
</head>
<body>
    <!-- Animated Background Elements -->
    <div class="background-animation">
        <div class="coffee-bean bean-1"></div>
        <div class="coffee-bean bean-2"></div>
        <div class="coffee-bean bean-3"></div>
        <div class="coffee-bean bean-4"></div>
        <div class="coffee-bean bean-5"></div>
        <div class="steam steam-1"></div>
        <div class="steam steam-2"></div>
        <div class="steam steam-3"></div>
    </div>

    <%- include('../partials/navbar', { page: 'checkout' }) %>

    <main class="checkout-page">
        <div class="container">
            <!-- Header with Progress -->
            <header class="checkout-header">
                <h1><i class="bi bi-credit-card-2-front"></i> Payment Method</h1>
                <p class="checkout-subtitle">Select your preferred payment method</p>
                
                <div class="progress-indicator">
                    <div class="progress-step completed">
                        <div class="step-icon"><i class="bi bi-cart-check-fill"></i></div>
                        <span class="step-label">Cart</span>
                    </div>
                    <div class="progress-line completed"></div>
                    <div class="progress-step completed">
                        <div class="step-icon"><i class="bi bi-clipboard-check-fill"></i></div>
                        <span class="step-label">Checkout</span>
                    </div>
                    <div class="progress-line completed"></div>
                    <div class="progress-step active">
                        <div class="step-icon"><i class="bi bi-credit-card-fill"></i></div>
                        <span class="step-label">Payment</span>
                    </div>
                    <div class="progress-line"></div>
                    <div class="progress-step">
                        <div class="step-icon"><i class="bi bi-check-circle-fill"></i></div>
                        <span class="step-label">Complete</span>
                    </div>
                </div>
            </header>

            <div class="checkout-grid">
                <!-- Left: Payment Options -->
                <section class="checkout-form">
                    <!-- Payment Methods Section -->
                    <div class="form-section">
                        <div class="section-header">
                            <h2><i class="bi bi-wallet2"></i> Select Payment Method</h2>
                        </div>
                        
                        <div class="payment-methods">
                            <!-- Cash on Pickup -->
                            <div class="payment-option">
                                <input type="radio" id="cashOnPickup" name="paymentMethod" value="cash_on_pickup" checked>
                                <label for="cashOnPickup" class="payment-label">
                                    <div class="payment-icon-wrapper">
                                        <div class="payment-icon">
                                            <i class="bi bi-cash-stack"></i>
                                        </div>
                                    </div>
                                    <div class="payment-details">
                                        <h3>Cash on Pickup</h3>
                                        <p>Pay when you pick up your order at the selected branch</p>
                                    </div>
                                    <div class="payment-check">
                                        <i class="bi bi-check-circle-fill"></i>
                                    </div>
                                </label>
                            </div>

                            <!-- PayPal -->
                            <div class="payment-option">
                                <input type="radio" id="paypal-payment" name="paymentMethod" value="paypal">
                                <label for="paypal-payment" class="payment-label">
                                    <div class="payment-icon-wrapper">
                                        <div class="payment-icon paypal-icon">
                                            <i class="bi bi-paypal"></i>
                                        </div>
                                    </div>
                                    <div class="payment-details">
                                        <h3>PayPal</h3>
                                        <p>Pay with PayPal</p>
                                    </div>
                                    <div class="payment-check">
                                        <i class="bi bi-check-circle-fill"></i>
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="checkout-actions">
                        <button type="button" class="btn btn-outline-secondary btn-lg" onclick="window.location.href='/checkout'">
                            <i class="bi bi-arrow-left"></i> Back to Checkout
                        </button>
                        <button type="button" id="confirmPaymentBtn" class="btn btn-primary btn-lg flex-grow-1">
                            <i class="bi bi-shield-check"></i> Confirm Order
                        </button>
                    </div>
                </section>

                <!-- Right: Order Summary -->
                <aside class="order-summary-sticky">
                    <div class="order-summary checkout-card">
                        <h2><i class="bi bi-receipt"></i> Order Summary</h2>

                        <div id="orderDetails" class="order-details-loading">
                            <div class="text-center py-5">
                                <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem; color: var(--checkout-accent) !important;">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p class="mt-3 text-muted">Loading order details...</p>
                            </div>
                        </div>
                        
                        <div id="orderSummaryContent" style="display: none;">
                            <div id="orderItemsList" class="order-items"></div>
                            
                            <div class="summary-totals mt-4">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Subtotal</span>
                                    <span class="fw-semibold" id="summarySubtotal">₱0.00</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Tax (2%)</span>
                                    <span class="fw-semibold" id="summaryTax">₱0.00</span>
                                </div>
                                <hr class="my-3">
                                <div class="d-flex justify-content-between">
                                    <span class="fw-bold fs-5">Total</span>
                                    <span class="fw-bold fs-5" style="color: var(--checkout-accent);" id="summaryTotal">₱0.00</span>
                                </div>
                            </div>

                            <div class="alert alert-info mt-4 d-flex align-items-center" role="alert">
                                <i class="bi bi-info-circle-fill me-2"></i>
                                <small>You will receive a confirmation email after placing your order.</small>
                            </div>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </main>

    <!-- Back to Top Button -->
    <button class="back-to-top" id="backToTop" onclick="scrollToTop()" aria-label="Back to top">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M12 19V5M5 12L12 5L19 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
    </button>

    <!-- Bottom Navigation (Mobile) -->
    <%- include('../partials/generalBottomNav', { page: 'checkout' }) %>

    <!-- PayPal Client ID for dynamic loading -->
    <script>
        window.PAYPAL_CLIENT_ID = '<%= paypalClientId %>';
        console.log('PayPal Client ID loaded:', window.PAYPAL_CLIENT_ID ? '✓ Available' : '✗ Missing');
        console.log('Client ID length:', window.PAYPAL_CLIENT_ID?.length);
    </script>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/user/paymentCheckout.js"></script>
</body>
</html>
