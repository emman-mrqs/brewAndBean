<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Email Verification - Bean & Brew</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700;900&family=Poppins:wght@300;400;500;600;700&family=Cormorant+Garamond:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Your custom CSS -->
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>

    <!-- Animated Background Elements (kept) -->
    <div class="background-animation" aria-hidden="true">
        <div class="coffee-bean bean-1"></div>
        <div class="coffee-bean bean-2"></div>
        <div class="coffee-bean bean-3"></div>
        <div class="coffee-bean bean-4"></div>
        <div class="coffee-bean bean-5"></div>
        <div class="coffee-bean bean-6"></div>
        <div class="steam-container">
            <div class="steam steam-1"></div>
            <div class="steam steam-2"></div>
            <div class="steam steam-3"></div>
            <div class="steam steam-4"></div>
        </div>
    </div>

    <!-- Centered Login Container -->
    <div class="login-container" role="main">
        <div class="login-form-wrapper">
            <div class="login-form-container" role="form" aria-labelledby="verify-heading">
                <div class="form-header">
                    <h2 id="verify-heading">Email Verification</h2>
                    <p>Enter the 6-digit code sent to your email</p>
                </div>

                <!-- Success/Error Messages -->
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="alert alert-<%= messageType || 'info' %>" role="alert">
                        <i class="fas fa-<%= messageType === 'success' ? 'check-circle' : messageType === 'error' ? 'exclamation-circle' : 'info-circle' %>"></i>
                        <%= message %>
                    </div>
                <% } %>

                <form class="login-form" id="verificationForm" action="/verify" method="POST" novalidate>
                    <input type="hidden" name="email" value="<%= email %>">

                    <div class="form-group">
                        <label for="verificationCode">Verification Code</label>
                        <div class="input-wrapper">
                            <i class="bi bi-key-fill input-icon" aria-hidden="true"></i>
                            <input
                                type="text"
                                id="verificationCode"
                                name="verificationCode"
                                placeholder="Enter 6-digit code"
                                maxlength="6"
                                pattern="[0-9]{6}"
                                value="<%= typeof formData !== 'undefined' && formData.verificationCode ? formData.verificationCode : '' %>"
                                required
                                autocomplete="off"
                                aria-required="true"
                            >
                        </div>
                        <small class="form-help">Enter the 6-digit code from your email</small>
                    </div>

                    <button type="button" class="btn-login" id="verifyBtn" aria-label="Verify Email">
                        <span>Verify Email</span>
                        <div class="btn-shine" aria-hidden="true"></div>
                    </button>
                </form>

                <div class="signup-prompt">
                    <p>Didn't receive the code? <a href="#" onclick="handleResendCode(); return false;" class="signup-link">Resend Code</a></p>
                    <form id="resendForm" action="/resend-code" method="POST" style="display: none;">
                        <input type="hidden" name="email" value="<%= email %>">
                    </form>
                </div>

                <div class="back-link">
                    <a href="/login" class="text-decoration-none">
                        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true" focusable="false">
                            <path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Keep auth JS unchanged -->
    <script src="/js/auth/verification.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>