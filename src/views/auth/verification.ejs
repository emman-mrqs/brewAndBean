<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Verification - Bean & Brew</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/verification.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <!-- Page Loader -->
    <%- include('../partials/pageLoader') %>

    <!-- Animated Background Elements -->
    <div class="background-animation">
        <div class="coffee-bean bean-1"></div>
        <div class="coffee-bean bean-2"></div>
        <div class="coffee-bean bean-3"></div>
        <div class="coffee-bean bean-4"></div>
        <div class="coffee-bean bean-5"></div>
        <div class="coffee-bean bean-6"></div>
        <div class="steam-container">
            <div class="steam steam-1"></div>
            <div class="steam steam-2"></div>
            <div class="steam steam-3"></div>
            <div class="steam steam-4"></div>
        </div>
    </div>

    <div class="login-container">
        <!-- Left Side - Branding -->
        <div class="login-left">
            <div class="brand-section">
                <div class="brand-logo">
                    <span class="logo-icon">â˜•</span>
                    <h1 class="brand-name">Bean & Brew</h1>
                </div>
                <p class="brand-tagline">Verify Your Email</p>
                <p class="brand-description">
                    We've sent a 6-digit verification code to your email address. 
                    Enter the code below to complete your registration.
                </p>
                
                <div class="verification-info">
                    <div class="info-item">
                        <i class="fas fa-clock"></i>
                        <span>Code expires in <span id="timer">5:00</span></span>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-envelope"></i>
                        <span id="user-email"><%= email || 'your email' %></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Verification Form -->
        <div class="login-right">
            <div class="form-container">
                <div class="form-header">
                    <h2>Email Verification</h2>
                    <p>Enter the 6-digit code sent to your email</p>
                </div>

                <!-- Success/Error Messages -->
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="alert alert-<%= messageType || 'info' %>">
                        <i class="fas fa-<%= messageType === 'success' ? 'check-circle' : messageType === 'error' ? 'exclamation-circle' : 'info-circle' %>"></i>
                        <%= message %>
                    </div>
                <% } %>

                <!-- Verification Form -->
                <form id="verificationForm" action="/auth/verify" method="POST" class="auth-form">
                    <input type="hidden" name="email" value="<%= email %>">
                    
                    <div class="form-group">
                        <label for="verificationCode">Verification Code</label>
                        <div class="code-input-container">
                            <input type="text" 
                                   id="verificationCode" 
                                   name="verificationCode" 
                                   maxlength="6" 
                                   pattern="[0-9]{6}"
                                   placeholder="000000"
                                   class="code-input"
                                   autocomplete="off"
                                   required>
                            <div class="code-helper">Enter 6-digit code</div>
                        </div>
                    </div>

                    <button type="submit" class="btn-primary" id="verifyBtn">
                        <i class="fas fa-check"></i>
                        Verify Email
                    </button>
                </form>

                <!-- Resend Section -->
                <div class="resend-section">
                    <p class="resend-text">Didn't receive the code?</p>
                    <form id="resendForm" action="/auth/resend-code" method="POST" style="display: inline;">
                        <input type="hidden" name="email" value="<%= email %>">
                        <button type="submit" class="btn-link" id="resendBtn">
                            <i class="fas fa-redo"></i>
                            Resend Code
                        </button>
                    </form>
                    <div id="resendCooldown" class="cooldown-text" style="display: none;">
                        Please wait <span id="cooldownTimer">30</span> seconds before requesting a new code
                    </div>
                </div>

                <!-- Skip for now option -->
                <div class="skip-section">
                    <p class="skip-text">Want to verify later?</p>
                    <a href="/auth/login" class="btn-secondary">
                        <i class="fas fa-arrow-right"></i>
                        Continue to Login
                    </a>
                    <p class="skip-note">
                        <i class="fas fa-info-circle"></i>
                        You can verify your email anytime from your account settings
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/auth/verification.js"></script>
</body>
</html>