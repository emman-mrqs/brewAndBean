<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Admin Login - Bean & Brew</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700;900&family=Poppins:wght@300;400;500;600;700&family=Cormorant+Garamond:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Your custom CSS -->
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <!-- Page Loader -->
    <%- include('../partials/pageLoader') %>

    <!-- Animated Background Elements (kept) -->
    <div class="background-animation" aria-hidden="true">
        <div class="coffee-bean bean-1"></div>
        <div class="coffee-bean bean-2"></div>
        <div class="coffee-bean bean-3"></div>
        <div class="coffee-bean bean-4"></div>
        <div class="coffee-bean bean-5"></div>
        <div class="coffee-bean bean-6"></div>
        <div class="steam-container">
            <div class="steam steam-1"></div>
            <div class="steam steam-2"></div>
            <div class="steam steam-3"></div>
            <div class="steam steam-4"></div>
        </div>
    </div>

    <!-- Centered Login Container -->
    <div class="login-container" role="main">
        <div class="login-form-wrapper">
            <div class="login-form-container" role="form" aria-labelledby="admin-signin-heading">
                <div class="form-header">
                    <h2 id="admin-signin-heading">Admin Sign In</h2>
                    <p>Restricted access â€” site administrators only</p>
                </div>

                <!-- Success/Error Messages -->
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="alert alert-<%= messageType || 'info' %>" role="alert">
                        <i class="fas fa-<%= messageType === 'success' ? 'check-circle' : messageType === 'error' ? 'exclamation-circle' : 'info-circle' %>"></i>
                        <%= message %>
                    </div>
                <% } %>

                <form class="login-form" id="adminLoginForm" action="/admin/login/<%= process.env.ADMIN_LOGIN_TOKEN %>" method="POST" novalidate>
                    <div class="form-group">
                        <!-- label no longer contains the icon -->
                        <label for="email">Admin Email</label>
                        <div class="input-wrapper">
                            <!-- icon INSIDE input box (left) -->
                            <i class="bi bi-envelope-fill input-icon" aria-hidden="true"></i>

                            <input
                                type="email"
                                id="email"
                                name="email"
                                placeholder="Enter admin email address"
                                value="<%= typeof formData !== 'undefined' && formData.email ? formData.email : '' %>"
                                required
                                autocomplete="email"
                                aria-required="true"
                            >
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <div class="input-wrapper">
                            <!-- icon INSIDE input box (left) -->
                            <i class="bi bi-lock-fill input-icon" aria-hidden="true"></i>

                            <input
                                type="password"
                                id="password"
                                name="password"
                                placeholder="Enter your password"
                                required
                                autocomplete="current-password"
                                aria-required="true"
                            >

                            <!-- password toggle (right) preserved -->
                            <button type="button" class="toggle-password" onclick="togglePassword()" id="togglePasswordBtn" aria-label="Show password" aria-pressed="false">
                            <!-- start with hidden password icon -->
                            <i id="eyeIcon" class="bi bi-eye-slash-fill" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>

                    <button type="submit" class="btn-login" aria-label="Admin sign in">
                        <span>Sign In</span>
                        <div class="btn-shine" aria-hidden="true"></div>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Keep auth JS unchanged -->
    <script src="/js/auth/login.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
